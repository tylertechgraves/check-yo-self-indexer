{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/check-yo-self-indexer/bin/Debug/net7.0/check-yo-self-indexer.dll",
            "args": [
                // "dropdb",
                // "migratedb",
                // "seeddb"
            ],
            "cwd": "${workspaceRoot}/check-yo-self-indexer",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/swagger",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}/swagger"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "envFile": "${workspaceFolder}/.env",
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/check-yo-self-indexer/Views"
            }
        }
    ]
}